{
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "watch": "turbo run watch",
    "dev:sample-web": "turbo run dev --filter=sample-web",
    "dev:mobile:ios": "turbo run dev:ios --filter=mobile-dev-client",
    "watch:core-mobile": "turbo run watch --filter=core-mobile",
    "build": "turbo run build",
    "build:mobile": "turbo run build --filter mobile-dev-client",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\" --ignore-path .gitignore",
    "cs": "changeset",
    "publish-packages": "turbo run build lint && changeset version && changeset publish"
  },
  "devDependencies": {
    "prettier": "^3.1.1",
    "turbo": "latest",
    "@changesets/cli": "^2.27.1"
  },
  "dependencies": {},
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "4.9.5"
  }
}
